<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:padding="5dp"
    android:layout_centerVertical="true"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTrackTitle"
        android:textSize="20dp"
        android:text="Millionaire"
        android:textColor="@color/notification_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ivPlayPause_2"
        android:layout_toLeftOf="@+id/ivPlayPause_2" />

    <TextView
        android:id="@+id/tvArtistAndAlbum"
        android:textColor="@color/notification_text_secondary"
        android:textSize="15dp"
        android:text="Queens of the stone age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/tvTrackTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ivPlayPause_2"
        android:layout_toLeftOf="@+id/ivPlayPause_2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivNext"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:src="@drawable/next_selector"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ivClose"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivPlayPause_2"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:src="@drawable/pause_selector"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/ivNext"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivClose"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/close_selector"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"/>

</RelativeLayout>